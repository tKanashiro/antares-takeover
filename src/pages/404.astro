---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404">
    <h1 class="notFoundTitle">404</h1>
    <div class="imageWrapper">
        <img class="notFoundImage" src="../../public/ant1.png" alt="">
    </div>
</Layout>

<style>
    .notFoundTitle {
        font-size: 65px;
        color: red;
        text-align: center;
    }

    .imageWrapper {
        border-radius: 50%;
        max-width: 50%;
        max-height: 50%;
        width: 350px;
        height: 350px;
        margin: auto;
        overflow: hidden;
    }

    .notFoundImage {
        width: 100%;
        height: 100%;
    }
</style>