---
interface Props {
    next?: string;
    title: string;
}

const { next, title } = Astro.props;
---
<header class="header">
  <h1>{title}</h1>
  {next && <a href={next}>&rarr;</a>}
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    color: white;
    padding: 0 0 2rem 0;
  }

  h1 {
    margin: 0;
    text-transform: uppercase;
  }

  a {
    font-size: 2rem;
    color: white;
    text-decoration: none;
  }
</style>
