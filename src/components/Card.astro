---
interface Props {
	img: string;
	body: string;
	href: string;
}

const { href, img, body } = Astro.props;
---

<li class="card">
	<a class="link" href={href}>
		<div class="imageWrapper">
			<img class="image" src={img} alt="">
		</div>

		<div class="body">
			{body}
		</div>
	</a>
</li>
<style>
	.card {
		border-radius: 4px;
		list-style: none;
		max-width: 300px;
		height: 225px;
		background: #ffffff;
		padding: 15px;
		margin: 15px 0;
		transition: 0.3s ease-in-out;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.card:hover {
		height: 325px;
	}

	.link:visited {
		color: #000000;
		text-decoration: none;
	}
	.imageWrapper {
		background: #ffffff;
		padding: 10px;
		width: 260px;
		height: 260px;
		border-radius: 4px;
		box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
		position: relative;
		top: -60px;
	}

	.image {
		max-width: 100%;
		height: 100%;
		
	}

	.body {
		position: relative;
		margin-top: -80px;
		padding: 10px 15px;
		text-align: center;
		font-weight: bold;
		visibility: hidden;
		opacity: 0;
		transition: 0.3s ease-in-out;
	}

	.card:hover .body {
		visibility: visible;
		opacity: 1;
		margin-top: -40px;
	}
</style>
